<div class="row">

    <div class="col-sm-4">
        <h1>Create Category</h1>
        <form action="/admin/categories/create" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="" placeholder="Enter Name" class="form-control">
            </div>
            <button class="btn btn-primary">Create Category</button>
        </form>
    </div>

{{!-- </div>

<div class="row"> --}}



    <div class="col-sm-8">
        <h1>Categories</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>

                {{#each categories}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{name}}</td>
                    <td>Jan 2nd 2032</td>
                    <td><a href="/admin/categories/edit/{{_id}}" class="btn btn-info">Edit</a></td>
                    <td>
                        <form action="/admin/categories/{{_id}}?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete</button></form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>