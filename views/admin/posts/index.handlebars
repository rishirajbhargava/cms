<h1>All Posts</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments?</th>
            <th>View Post</th>
            <th>Date</th>


        </tr>
    </thead>

    <tbody>

        {{#each posts}}
        <tr>
            <td>{{_id}}</td> 
            <td><img height="60px" src="/uploads/{{file}}" alt="{{filename}}"></td>           
            <td>{{title}}</td>            
            <td>{{status}}</td> 
            <td>{{category.name}}</td>           
            <td>{{allowComments}}</td>
            <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
            {{!-- <button type="submit" class="btn btn-danger">Delete</button> --}}
        </form>
            <td><a href="/post/{{slug}}">View</a></td>
            <td>{{generateTime date 'MMM Do YYYY'}}</td> 
            
                 
        </tr>

        {{/each}}

    </tbody>



</table>